{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Edit category'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Edit category'|trans({'%id%': category.id|default('')}) }}</h1>
    <br>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <br>
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'save changes'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('category_index') }}" class="btn btn-link">
            {{ 'back to list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}